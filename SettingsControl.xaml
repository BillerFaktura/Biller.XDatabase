<UserControl x:Class="XDatabase_Biller.SettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Loaded="UserControl_Loaded">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Biller.Controls;Component/Themes/Generic.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <StackPanel>
        <TextBlock Text="Einstellungen" Style="{DynamicResource SectionHeaderStyle}"/>
        <TextBlock Text="Für diese Datenbank können Sie keine Einstellungen vornehmen. Klicken Sie auf &quot;Weiter&quot;." Style="{DynamicResource ContentStyle}" TextWrapping="Wrap"/>
    </StackPanel>
</UserControl>
